<%= form_for user, html: {class: "form-horizontal"}, validate: true do |f| %>
  <%= render "shared/error_messages", object: user if user.errors.any? %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2", validate: true %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <% if user.new_record? %>
    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <% end %>

  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
